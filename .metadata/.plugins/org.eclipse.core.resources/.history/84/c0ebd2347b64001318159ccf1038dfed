//Main Window
Ti.UI.setBackgroundColor("white");

var mWindow= Ti.UI.createWindow({
	title: "Main Window",
	backgroundImage: "Hcover.jpg",
	backgroundRepeat: false

});

var navWindow1 =Ti.UI.iOS.createNavigationWindow({
	window: mWindow
});


var view1 = Ti.UI.createView({
	backgroundColor: "#000"
});


var view2 = Ti.UI.createView({
	backgroundColor: "#48b"
});


var view3 = Ti.UI.createView({
	backgroundColor: "#246"
});


var viewImage1 = Ti.UI.createImageView({
	image: "images/Smaug2013.jpg",
	height:Ti.UI.FILL,
	title: view1.title
});


var viewText2 = Ti.UI.createLabel({
	text: "Text 2",
	color: "#fff"
});


var viewImage3 = Ti.UI.createImageView({
	image: "images/Smaug2013.jpg",
	width: Ti.UI.FILL,
	backgroundColor: "#fff",
	title: "Smaug2013"
});

view1.add(viewImage1);
view2.add(viewText2);
view3.add(viewImage3);



var samplePics = Ti.UI.createScrollableView({
	width: 130,
	height: 130,
	top: 133,
	backgroundColor:"#fff",
	views: [view1, view2, view3],
	showPagingControl: true,
	pagingControlColor: "#252525"
});


//Label
var viewChar = Ti.UI.createLabel({
	text: "View Characters",
	color: "#fff",
	font: {fontsize: 30, fontFamily: "Arial", fontWeight: "bold"},
	center:0
});


//View
var viewPics = Ti.UI.createView({
	backgroundImage: "HcoverFoot.jpg",
	height: 30,
	bottom: 0
	});
viewPics.add(viewChar);

viewPics.addEventListener("click", function(){
Ti.include('theDwarves.js');
handle();
});


//Main Code
mWindow.add(viewPics);
mWindow.add(samplePics);
navWindow1.open();
