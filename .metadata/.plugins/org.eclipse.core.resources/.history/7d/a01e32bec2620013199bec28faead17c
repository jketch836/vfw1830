var numOfViews= 20;
var viewContainer = Ti.UI.createScrollView({
	layout:"vertical"
});

for(var i=0; i<numOfViews; i++){
	var positionValue= 10/5;
	var newView = Ti.UI.createView({
		backgroundColor:"#333",
		width: 75,
		height:100,
		top:4,
		left:4,
		right: 4,
		bottom:4
	});
	viewContainer.add(newView);
	win.add(newView);
}


win.add(viewContainer);
win.open();
