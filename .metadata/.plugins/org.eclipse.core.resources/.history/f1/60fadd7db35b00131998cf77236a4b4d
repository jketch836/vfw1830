Ti.UI.setBackgoundColor("green");

var defultMargin =10;

var mainWindow = Ti.UI.createWindow({
	title: "My First Window",
	backgroundColor: "#ff0000",
	backgroundRepeat: true,
	id: "window1"
});

var headView = Ti.UI.createView({
	backgroundColor: "#333",
	borderRadius: 10,
	height: 90,
	top: 20,
	right: 5,
	left: 5
});

var instructions = Ti.UI.createView({
	borderColor: "#333",
	borderRadius: 5,
	borderWidth: 5,
	height: 30,
	right: 5,
	left: 5,
	top: headView.top + headView.height + defultMargin
});

var instructionsText = Ti.UI.createLabel({
	text: "Instructions: Roll the dice and try to roll a double to win",
	color: "#333",
	font: {fontsize: 14, fontFamily: "AmericanTypewriter"},
	
});




mainWindow.add(headView);
mainWindow.add(instructions);
mainWindow.open();