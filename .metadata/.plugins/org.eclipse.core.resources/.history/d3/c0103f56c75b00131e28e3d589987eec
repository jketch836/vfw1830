Ti.UI.setBackgoundColor("green");

var defultMargin =10;

var mainWindow = Ti.UI.createWindow({
	title: "GoT Window",
	backgroundImage: "silver.jpg",
	backgroundRepeat: false
	,
});

var HouseSigil = Ti.UI.createView({
	backgroundColor: "#000080",
	text: "House Sigil",
	borderRadius: 10,
	height: 50,
	top: 20,
	right: 5,
	left: 5
});

var instructions = Ti.UI.createView({
	borderColor: "#333",
	borderRadius: 5,
	borderWidth: 1,
	height: Titanium.UI.SIZE,
	right: 5,
	left: 5,
	top: HouseSigil.top + HouseSigil.height + defultMargin
});

var instructionsText = Ti.UI.createLabel({
	text: "The",
	color: "#333",
	font: {fontsize: 14, fontFamily: "AmericanTypewriter"},
	height: Ti.UI.SIZE,
	//right: 15,
	//left: 15,
	//top: 15,
	//bottom: 15
});



instructions.add(instructionsText);
mainWindow.add(HouseSigil);
mainWindow.add(instructions);
mainWindow.open();