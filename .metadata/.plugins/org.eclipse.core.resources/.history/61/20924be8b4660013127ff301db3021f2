var win = Ti.UI.createWindow({

});


var testamonialData = [
	{img: 'Unknown.jpeg', text: "bar seven five, 'large king', hyatt's"},
	{img: 'Unknown.jpeg', text: "nice place"},
	{img: 'Unknown.jpeg', text: "service sucked"}
];

var scrollableViews = [];


for (var i=0; i < testamonialData.length; i++){
	var newTestView = Ti.UI.createView({
	backgroundImage: testamonialData[i]
});

var labelViewWarp = Ti.UI.createView({
	backgroundColor: "#000",
	opacity: .7,
	bottom:0,
	height: 70,
	layout:"vertical"
});
var testimonailTextTitle = Ti.UI.createLabel({
	text: "PEOPLE TALK ABOUT",
	font: {fontSize: 6, fontfamily: "Arial"},
	top: 150,
	color: "#fff",
	textAlign: "center",
	bottom: 5
});

var testimonailText = Ti.UI.createLabel({
	text: testamonialData[i].text,
	font: {fontSize: 12, fontfamily: "Arial"},
	bottom: 3,
	color: "#fff",
	textAlign: "center"
});
labelViewWarp.add(testimonailTextTitle, testimonailText);
scrollableViews.push(newTestView);
};


var testamonials = Ti.UI.createScrollableView({
	showPagingControl: true,
	veiws: scrollableViews,
	height:200,
	top: 0,
	pagingBackgroundColor: 'transparent'
});


var detailInfo = Ti.UI.createView({
	height: Ti.Platform.displayCaps.platformHeight - testamonials.height,
	bottom: 0,
	backgroundColor: "#f2f2f2"
	//layout: "vertical"
});

var locationName = Ti.UI.createLabel({
	text: "Andaz Wall Street",
	font: {fontSize: 20, fontFamily: 'Arial'},
	color: "#b2f4ff",
	top: 10,
	bottom: 5,
	left: 30
});

var locationType = Ti.UI.createLabel({
	text: "Hotel. Restraunt",
	font: {fontSize: 14, fontFamily: 'Arial'},
	bottom: 5,
	left: 30
});

var locationStatus = Ti.UI.createLabel({
	text: "Open",
	font: {fontSize: 14, fontFamily: 'Arial'},
	bottom: 5,
	left: 30
});

var locationServices = Ti.UI.createLabel({
	text: "Beer & Wine, Reservations, Credit Cards",
	font: {fontSize: 14, fontFamily: 'Arial'},
	bottom: 5,
	left: 30
});

detailInfo.add(locationName, locationType, locationStatus, locationServices);

var largeBorder= Ti.UI.createView({
	backgroundColor: "gray",
	height:1,
	width: Ti.Platform.displayCaps.platformWidth -10
});

var smallBorder= Ti.UI.createView({
	backgroundColor: "gray",
	height:1,
	width: Ti.Platform.displayCaps.platformWidth -30
});




win.add(testamonials, detailInfo);
win.open();
