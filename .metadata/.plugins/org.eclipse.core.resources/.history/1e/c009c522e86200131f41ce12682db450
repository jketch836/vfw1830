var win = Ti.UI.createWindow({
	title: "Characters of the Hobbit",
	backgroundColor: "#fff",
	layout: "horizontal"

});
var navWindow =Ti.UI.iOS.createNavigationWindow({
	window: win
});



var gallery= Ti.Filesystem.getFile(Ti.Filesystem.resourcesDirectory, "images");
var folderContents = gallery.getDirectoryListing();


var viewContainer = Ti.UI.createScrollView({
	layout:"horizontal",
	scrollType: "vertical",
	width: Ti.UI.FILL,
	contentWidth: 315
});


var numberOfViews=21;


for(var i=0; i<folderContents.length; i++){
	var newView = Ti.UI.createView({
		backgroundColor: "#545454",
		width: 75,
		height: 75,
		top:5,
		left:5
	});
	
	var cast = Ti.UI.createImageView({
		image: "images/" + folderContents[i]
	});
	
//	var newLabel = Ti.UI.createLabel({
//		color: "#00000",
//		textAlign: "center"
//	});

	newView.add(cast);
	viewContainer.add(newView);
	
}

viewContainer.add(newView);


var mainMenu = Ti.UI.createLabel({
	text: "Back to Main Menu",
	color: "#545454",
	font: {fontsize: 24, fontFamily: "Arial", fontWeight: "bold"},
	center:0
});

//View
var viewMainMenu = Ti.UI.createView({
	backgroundColor: "#fff",
	borderRadius: 10,
	height:30,
	bottom: 40,
	right: 5,
	left: 5,
	});
viewMainMenu.add(mainMenu);

viewMainMenu.addEventListener("click", function(){
Ti.include('app.js');
});


win.add(viewContainer);
win.add(mainMenu);
win.add(viewMainMenu);
win.open();
navWindow.open();









