var menuWindow = Ti.UI.currentWindow;


//Gallery Folder
var gallery= Ti.Filesystem.getFile(Ti.Filesystem.resourcesDirectory, "profilePic");
var folderContents = gallery.getDirectoryListing();


//image
var i = Math.floor(Math.random() * folderContents.length);

var imageView = Ti.UI.createImageView({
			image: "profilePic/" + folderContents[3],
			title: folderContents[i],
			font: {fontsize: 30, fontFamily: "Arial", fontWeight: "bold"},
			width: Ti.Platform.displayCaps.setPlatformWidth -20,
			height: Ti.Platform.displayCaps.setPlatormHeight - 80,
			top:2,
			left:2,
			right:2
		});

//Next Image Button
var newImageView = Ti.UI.createView({
	backgroundColor: "#fff",
	borderRadius: 5,
	height:40,
	bottom:20,
	left:5,
	right:5
});

var newImageLabel = Ti.UI.createLabel({
	text: "Next Image",
	font: {fontSize: 20, fontFamily: "Helvetica", fontWeight: "bold"},
	color: "#000",
	center:0
});
newImageView.add(newImageLabel);


	//Show pic
	newImageView.addEventListener("click", function(){
	var notI = math;
	while(math === notI){
			Math.floor(Math.random() * folderContents.length);
		};
	});





menuWindow.add(newImageLabel);
menuWindow.add(newImageView);
menuWindow.add(imageView);