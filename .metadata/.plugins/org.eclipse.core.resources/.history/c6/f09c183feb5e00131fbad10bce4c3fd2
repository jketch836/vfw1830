//NAV WINDOWS
var mWindow= Ti.UI.createWindow({
	title: "Noble House Members of Westros"
});
var navWindow = Ti.UI.iOS.createNavigationWindow({
	window: mWindow
});


//TableView
var table= Ti.UI.createTableView();

//TableView Sections
var starkSection = Ti.UI.createTableViewSection ({
	headerTitle: "Stark",
	footerTitle: "			Winter is Comming"
});

var lannisterSection = Ti.UI.createTableViewSection ({
	headerTitle: "Lannister",
	footerTitle: "			Hear us Roar"
});

//Set the TableViewSection to the Table
var myDataSetions = [starkSection, lannisterSection];
table.setData(myDataSetions);

//TableView Rows
var getDetail = function(){
	var detailWindow = Ti.UI.createWindow({
		backgroundImage: "#fff",
		title: this.title
	});
	var detailLabel = Ti.UI.createLabel({
		text: this.desc
	});
	detailWindow.add(detailLabel);
	navWindow.openWindow(detailWindow, {animate: true});
};

for(var i=0, j=fruits.length; i<j; i++){
	var Row = Ti.UI.createTableViewRow({
		title: fruits[i].title,
		desc: fruits[i].content
	});
	fruitSection.add(Row);
	Row.addEventListener("click", getDetail);
};

for(var i=0, j=vegeies.length; i<j; i++){
	var Row = Ti.UI.createTableViewRow({
		title: vegeies[i].title,
		desc: vegeies[i].content
	});
	vegeieSection.add(Row);
	Row.addEventListener("click", getDetail);
};



mWindow.add(table);
navWindow.open();

