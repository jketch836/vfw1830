//Window
var mWin = Ti.UI.createWindow({
	backgroundColor: "#333",
	layout: "horizontal",
	title: "Menu",
	font: {fontSize: 24, fontFamily: "Georgia", fontColor: "FF0000"}
});

var navWin1 =Ti.UI.iOS.createNavigationWindow({
	window: mWin
});


var galleryView = Ti.UI.createView({
	backgroundColor: "##FF0000",
	borderRadius: 10,
	height:50,
	top:80,
	left:10,
	right:10,
	file: 'gallery.js'
});

var galleryLabel = Ti.UI.createLabel({
	text: "Picture Gallery",
	font: {fontSize: 20, fontFamily: "Helvetica"},
	color: "#000",
	left:20
});

galleryView.addEventListener("click", function(event){
	var gWin = Ti.UI.createWindow({
		backgroundColor: "#FF0000",
		layout: "horizontal",
		text: 'Gallery',
		font: {fontSize: 24, fontFamily: "Georgia"},
		url: event.source.file
	});
	navWin1.openWindow(gWin, {animate:true});
});



var bioView = Ti.UI.createView({
	backgroundColor: "#FFD700",
	borderRadius: 10,
	height:50,
	top:80,
	left:10,
	right:10,
	file: 'gallery.js'
});

var bioLabel = Ti.UI.createLabel({
	text: "BioGraphy",
	font: {fontSize: 20, fontFamily: "Helvetica"},
	color: "#000",
	left:20
});

bioView.addEventListener("click", function(event){
	var newWindow = Ti.UI.createWindow({
		backgroundColor: "#fff",
		url: event.source.file
	});
	navWin1.open();
});



var customView = Ti.UI.createView({
	backgroundColor: "#808080",
	borderRadius: 10,
	height:50,
	top:80,
	left:10,
	right:10,
	file: 'custom.js'
});

var customLabel = Ti.UI.createLabel({
	text: "Custom ______",
	font: {fontSize: 20, fontFamily: "Helvetica"},
	color: "#fff",
	left:20
});

customView.addEventListener("click", function(event){
	var newWindow = Ti.UI.createWindow({
		backgroundColor: "#fff",
		url: event.source.file
	});
	navWin1.open();
});














galleryView.add(galleryLabel);
bioView.add(bioLabel);
customView.add(customLabel);
mWin.add(galleryView);
mWin.add(bioView);
mWin.add(customView);
navWin1.open();